{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./dist",
    "target": "es2017",
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "lib": [
    "ES2015",
    "ES2017"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
